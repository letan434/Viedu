@model ViEdu.Models.DepartmentVm
@{
    ViewData["Title"] = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1 class="mt-4">Chi tiết</h1>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Department">Về danh sách</a>
        </div>
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ID)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ID)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DEPT_CD)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DEPT_CD)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DEPT_NAME)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DEPT_NAME)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>
