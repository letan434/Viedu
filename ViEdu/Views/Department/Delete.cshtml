@model ViEdu.Models.DepartmentVm
@{
    ViewData["Title"] = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1 class="mt-4">Xoá Phòng Ban</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xoá Phòng Ban</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Department">Về danh sách</a>
        </div>
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        Tên Phòng ban
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DEPT_NAME)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input asp-for="ID" type="hidden" />
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
