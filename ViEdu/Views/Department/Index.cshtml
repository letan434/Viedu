@using System.Collections.Generic;

@model List<ViEdu.Models.DepartmentVm>
@{
    ViewData["Title"] = "Trang chủ Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1 class="mt-4">Danh sách Department</h1>
    <div class="card mb-12">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <a class="btn btn-success" asp-action="Create" asp-controller="Department">Tạo mới</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Mã phòng ban
                            </th>
                            <th>
                                Tên phòng ban
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DEPT_CD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DEPT_NAME)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Xem", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>